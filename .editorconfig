# top-most EditorConfig file
root = true

# General settings for all files
[*]
charset = utf-8
end_of_line = lf
indent_style = space
indent_size = 4
insert_final_newline = true
trim_trailing_whitespace = true

# Specific settings for Java files
[*.java]
indent_size = 4

# Specific settings for XML files (e.g., Android layout files)
[*.xml]
indent_size = 2

# Specific settings for markdown files
[*.md]
trim_trailing_whitespace = false
